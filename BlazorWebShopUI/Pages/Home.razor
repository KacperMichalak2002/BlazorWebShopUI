@page "/"
@inject HttpClient Http
@using BlazorWebShop.Models

<PageTitle>Debug</PageTitle>

<h2>Polecane produkty</h2>
<div class="product-grid">
    @foreach (var product in Products)
    {
        <ProductCard Title="@product.Title"
                     Description="@product.Description"
                     Price="@product.Price"
                     ImageUrl="@product.ImageUrl" />
    }
</div>

@code {
    private List<ProductCard> Products = new List<ProductCard>();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var fetchedProducts = await Http.GetFromJsonAsync<List<ProductCard>>(
                $"data/ProductCardInfo.json?nocache={Guid.NewGuid()}"
            );

            if (fetchedProducts != null)
            {
                Products = fetchedProducts;
            }
        }
        catch (Exception e)
        {
            Console.WriteLine($"Error fetching products: {e.Message}");
        }
    }
}
